    <!-- Script for mobile navigation and custom dropdown -->
    <script>
        const menuButton = document.getElementById('menu-button');
        const closeMenuButton = document.getElementById('close-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        // Show mobile menu
        menuButton.addEventListener('click', () => {
            mobileMenu.classList.remove('hidden');
        });

        // Hide mobile menu
        closeMenuButton.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
        });

        // Hide mobile menu when clicking a link
        function closeMenu() {
            mobileMenu.classList.add('hidden');
        }

        // --- Custom Barber Dropdown Logic ---
        const barbers = [
            { name: "Carlos Jimenez", value: "Carlos Jimenez", image: "https://i.imgur.com/wO7rsj4.jpeg" }, // Updated name
            { name: "Aaron Smith", value: "Aaron Smith", image: "https://i.imgur.com/wL9vUGb.jpeg" }, // Updated name
            { name: "Daniel Jefferson", value: "Daniel Jefferson", image: "https://i.imgur.com/Z2PT4Fv.jpeg" } // Updated name and image
        ];

        const dropdownHeader = document.getElementById('dropdown-header');
        const dropdownList = document.getElementById('dropdown-list');
        const selectedBarberDisplay = document.getElementById('selected-barber-display');
        const selectedBarberValueInput = document.getElementById('selected-barber-value');

        // Populate dropdown options
        function populateBarberDropdown() {
            dropdownList.innerHTML = ''; // Clear existing options
            barbers.forEach(barber => {
                const optionDiv = document.createElement('div');
                optionDiv.classList.add('dropdown-option');
                optionDiv.setAttribute('data-value', barber.value);
                optionDiv.setAttribute('data-name', barber.name); // Store full name for display

                const img = document.createElement('img');
                img.src = barber.image;
                img.alt = barber.name;
                img.classList.add('w-8', 'h-8', 'object-cover', 'rounded-full', 'mr-3'); // Tailwind classes for image size and margin

                const span = document.createElement('span');
                span.textContent = barber.name;

                optionDiv.appendChild(img);
                optionDiv.appendChild(span);

                optionDiv.addEventListener('click', () => selectBarber(barber));
                dropdownList.appendChild(optionDiv);
            });
        }

        // Toggle dropdown visibility
        function toggleDropdown() {
            dropdownList.classList.toggle('active');
            dropdownHeader.setAttribute('aria-expanded', dropdownList.classList.contains('active'));
        }

        // Select a barber
        function selectBarber(barber) {
            selectedBarberDisplay.innerHTML = `<img src="${barber.image}" alt="${barber.name}" class="w-8 h-8 object-cover rounded-full mr-3 inline-block"> ${barber.name}`;
            selectedBarberValueInput.value = barber.value; // Set the value for form submission
            dropdownList.classList.remove('active');
            dropdownHeader.setAttribute('aria-expanded', 'false');
        }

        // Event listener for dropdown header click
        dropdownHeader.addEventListener('click', toggleDropdown);

        // Close dropdown when clicking outside
        document.addEventListener('click', (event) => {
            const customDropdown = document.getElementById('barber-dropdown');
            if (!customDropdown.contains(event.target) && dropdownList.classList.contains('active')) {
                dropdownList.classList.remove('active');
                dropdownHeader.setAttribute('aria-expanded', 'false');
            }
        });

        // Initialize dropdown on page load
        document.addEventListener('DOMContentLoaded', () => {
            populateBarberDropdown();
            // Set initial display text
            selectedBarberDisplay.textContent = "-- Choose a barber --";
            selectedBarberValueInput.value = ""; // Ensure hidden input is empty initially
            dropdownHeader.setAttribute('aria-haspopup', 'listbox');
            dropdownHeader.setAttribute('aria-expanded', 'false');
            dropdownHeader.setAttribute('role', 'combobox');
        });
    </script>
</body>
